{
  "name": "medical-analysis-assistant",
  "version": "1.0.0",
  "private": true,
  "description": "Web app to analyze medical reports (images) using OpenRouter qwen/qwen2.5-vl-72b-instruct:free",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server.js",
    "dev:client": "npm --prefix client run dev",
    "start:all": "concurrently \"node server.js\" \"npm --prefix client start\""
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.4"
  }
}
